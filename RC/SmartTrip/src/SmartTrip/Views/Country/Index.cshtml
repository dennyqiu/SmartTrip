@{
    ViewBag.Title = "Country Index";
}

<div class="jumbotron">
    <h1>Country</h1>
</div>
@* Markup removed for brevity *@
<div class="row">
    <div class="col-md-4">
        @if (Model.Count == 0)
        {
            <h4>No Country Items</h4>
        }
        else
        {
            <table>
                <tr><th>Country</th><th></th></tr>
                @foreach (var country in Model)
                {
                    <tr>
                        <td>@country.CountryName </td>
                        <td>
                            @Html.ActionLink("Edit", "Edit", "Country", new { id = country.Id }) |
                            @Html.ActionLink("Delete", "Delete", "Country", new { id = country.Id })
                        </td>
                    </tr>
                }
            </table>
        }
        <div>@Html.ActionLink("Create New Country", "Create", "Country") </div>
    </div>

    
</div>