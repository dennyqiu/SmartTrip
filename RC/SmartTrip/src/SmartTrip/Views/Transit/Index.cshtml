@{
    ViewBag.Title = "Transit Index";
}

<div class="jumbotron">
    <h1>Transit</h1>
</div>
@* Markup removed for brevity *@
<div class="row">
    <div class="col-md-4">
        @if (Model.Count == 0)
        {
            <h4>No Transit Items</h4>
        }
        else
        {
            <table>
                <tr><th>Transit</th><th></th></tr>
                @foreach (var transit in Model)
                {
                    <tr>
                        <td>@transit.TransitName </td>
                        <td>
                            @Html.ActionLink("Edit", "Edit", "Transit", new { id = transit.Id }) |
                            @Html.ActionLink("Delete", "Delete", "Transit", new { id = transit.Id })
                        </td>
                    </tr>
                }
            </table>
        }
        <div>@Html.ActionLink("Create New Transit", "Create", "Transit") </div>
    </div>

    
</div>